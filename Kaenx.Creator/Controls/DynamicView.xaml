                        <TextBlock VerticalAlignment="Center">
                            <Run Text="{x:Static p:Resources.tdyn_tmod}" />
                            <Run Text="{Binding Name}" />
                        </TextBlock>
                    </StackPanel>
                </DataTemplate>
